# Email Service Configuration
# Choose between Nodemailer (recommended for development) or SendGrid

# Nodemailer Configuration (Recommended for development)
EMAIL_PROVIDER=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_FROM_NAME=NydArt Advisor

# For Gmail, use App Password (not your regular password)
# 1. Enable 2-factor authentication on your Google account
# 2. Go to Google Account settings > Security > App passwords
# 3. Generate an app password for "Mail"

# Alternative email providers:
# EMAIL_PROVIDER=outlook (for Outlook/Hotmail)
# EMAIL_PROVIDER=yahoo (for Yahoo)
# EMAIL_PROVIDER=custom (for custom SMTP server)

# Custom SMTP Configuration (if using custom provider)
# EMAIL_HOST=smtp.yourdomain.com
# EMAIL_PORT=587
# EMAIL_SECURE=false

# SendGrid Configuration (Alternative)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com
# SENDGRID_FROM_NAME=NydArt Advisor

# Frontend URL for reset links
FRONTEND_URL=http://localhost:3000

# Test email recipient (for testing)
TEST_EMAIL=test@example.com

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Test SMS recipient (for testing)
TEST_PHONE_NUMBER=+1234567890

# Server Configuration
PORT=4003
NODE_ENV=development 