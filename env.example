# Notification Service Environment Variables
# Copy this file to .env and fill in your actual values

# ===== SERVER CONFIGURATION =====
PORT=4003
NODE_ENV=development

# ===== EMAIL SERVICES =====

# SendGrid Configuration (Primary Email Service)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=NydArt Advisor

# Nodemailer Configuration (Alternative Email Service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=NydArt Advisor
SMTP_SECURE=false
SMTP_REQUIRE_TLS=true

# ===== SMS SERVICES =====

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===== SERVICE URLs =====
FRONTEND_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FILE=logs/notification-service.log

# ===== MONITORING =====
ENABLE_METRICS=true
METRICS_PORT=9090

# ===== EMAIL TEMPLATES =====
EMAIL_TEMPLATE_PATH=src/templates
DEFAULT_LOCALE=en

# ===== SECURITY =====
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
TRUST_PROXY=true

# ===== ERROR HANDLING =====
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# ===== DEVELOPMENT OVERRIDES =====
# Uncomment for development/testing
# MOCK_EMAIL_SERVICE=true
# MOCK_SMS_SERVICE=true

# ===== PRODUCTION OVERRIDES =====
# Uncomment and set for production
# NODE_ENV=production
# ENABLE_HTTPS=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ===== TESTING OVERRIDES =====
# Uncomment for testing environment
# NODE_ENV=test
# TEST_EMAIL=test@example.com
# TEST_PHONE=+1234567890

# ===== EMAIL DELIVERY SETTINGS =====
EMAIL_TIMEOUT_MS=30000
EMAIL_RETRY_DELAY_MS=5000
MAX_EMAIL_SIZE_MB=10

# ===== SMS DELIVERY SETTINGS =====
SMS_TIMEOUT_MS=10000
SMS_RETRY_DELAY_MS=2000
MAX_SMS_LENGTH=160

# ===== TEMPLATE CUSTOMIZATION =====
COMPANY_NAME=NydArt Advisor
COMPANY_LOGO_URL=https://yourdomain.com/logo.png
SUPPORT_EMAIL=support@yourdomain.com
SUPPORT_PHONE=+1234567890

# ===== EMAIL VERIFICATION =====
EMAIL_VERIFICATION_ENABLED=true
VERIFICATION_TOKEN_EXPIRY_HOURS=24

# ===== NOTIFICATION PREFERENCES =====
DEFAULT_EMAIL_FREQUENCY=daily
DEFAULT_SMS_FREQUENCY=urgent_only
ENABLE_MARKETING_EMAILS=false

# ===== ANALYTICS =====
TRACK_EMAIL_OPENS=true
TRACK_EMAIL_CLICKS=true
TRACK_SMS_DELIVERY=true

# ===== BACKUP & RECOVERY =====
BACKUP_EMAIL_SERVICE=sendgrid
BACKUP_SMS_SERVICE=twilio
ENABLE_SERVICE_FALLBACK=true

# ===== PERFORMANCE =====
EMAIL_BATCH_SIZE=50
SMS_BATCH_SIZE=10
MAX_CONCURRENT_EMAILS=10
MAX_CONCURRENT_SMS=5

# ===== COMPLIANCE =====
GDPR_COMPLIANT=true
CAN_SPAM_COMPLIANT=true
DATA_RETENTION_DAYS=90

# ===== INTEGRATION =====
# Webhook URLs for external services
WEBHOOK_URL=https://your-webhook-endpoint.com
WEBHOOK_SECRET=your_webhook_secret

# ===== DEBUGGING =====
DEBUG_EMAIL_SENDING=false
DEBUG_SMS_SENDING=false
LOG_EMAIL_CONTENT=false
LOG_SMS_CONTENT=false

# ===== CUSTOMIZATION =====
# Custom email templates
WELCOME_EMAIL_TEMPLATE=welcome.html
PASSWORD_RESET_TEMPLATE=password-reset.html
SECURITY_ALERT_TEMPLATE=security-alert.html

# Custom SMS templates
SMS_WELCOME_TEMPLATE=Welcome to NydArt Advisor!
SMS_SECURITY_TEMPLATE=Security alert: New login detected
SMS_RESET_TEMPLATE=Your password reset code is: {code} 